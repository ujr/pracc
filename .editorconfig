# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.html]
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
